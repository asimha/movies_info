<div class="modal-content">
<center>
    <%= form_tag movies_kannada_path, :method => 'get' do %>
            <p>
              <%= text_field_tag :search, params[:search] %>
              <%= submit_tag "Search", :name => nil %>
            </p>
    <% end %>
</center>
<div class="container">
<h4 class="match-heading-link"></h4>
<div class="row">
   <div class="col-sm-12">
        <h4 class="col-sm-3 color-of-heading">Name</h4>
        <h4 class="col-sm-3 color-of-heading">Owner</h4>
        <h4 class="col-sm-3 color-of-heading">rating </h4>
   </div>
<br>
<div class="journal-entry-devider"></div>

<% @movies.each do |m| %>
<% user = User.find(m.owner_id)%>
<div class="message-box">
    <div class="col-sm-12">
        <div class="col-sm-3"><%= m.name %></div>
        <div class="col-sm-3 winner-name message-box-high"><%= user.username if m.owner_id? %></div>
        <div class="col-sm-2"><%= m.rating %> </div>
        <div class="col-sm-2"></div>
        <div class="journal-entry-devider"></div>
    </div>
</div>
<% end %>
</div>
</div>
</div>